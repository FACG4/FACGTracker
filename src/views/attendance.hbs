{{>asidebar}}
<section class="attendance">
  {{>trackBox}}
  <form class="form_attendance_style" action="/attendance" method="POST">
    <table class="attendance-table" id="attendanceTable">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Clock In</th>
        <th>Clock Out</th>
      </tr>
      {{#each students}} {{#if this.day_id}}
      <tr class="studentData exist">
        <td id="fullName" class="{{this.user_id}}">
          {{#if this.first_name}} {{this.first_name}} {{this.last_name}} {{else}} @{{this.github_username}} {{/if}}
        </td>
        <td>
          <select id="attend">
            <option value="present">Present</option>
            <option value="absent">Absent</option>
          </select>
        </td>
        <td>
          <input id="clockIn" type="time" name="clockIn" value="{{this.clock_in}}">
        </td>
        <td>
          <input id="clockOut" type="time" name="clockOut" value="{{this.clock_out}}">
        </td>
      </tr>
      {{else}}
      <tr class="studentData">
        <td id="fullName" class="{{this.id}}">
          {{#if this.first_name}} {{this.first_name}} {{this.last_name}} {{else}} @{{this.github_username}} {{/if}}
        </td>
        <td>
          <select id="attend">
            <option value="present">Present</option>
            <option value="absent" selected>Absent</option>
          </select>
        </td>
        <td>
          <input id="clockIn" type="time" name="clockIn" value="">
        </td>
        <td>
          <input id="clockOut" type="time" name="clockOut" value="">
        </td>
      </tr>
      {{/if}} {{/each}}
    </table>
    <input type="submit" value="Save" class="attendance-save-button" id="saveAttendanceBtn">
  </form>
</section>