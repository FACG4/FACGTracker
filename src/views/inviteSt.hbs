{{>asidebar}}
<div class="container">
  <h1>Invite a student by Email</h1>
  <form class="invite-by-email"  id="inviteByEmail" action="/invitebygmail" method="POST">
    <label for="email">Enter student email</label>
    <input type="email" name="studentEmail" id="email" placeholder="Enter student email">
    <input type="submit" value="Invite">
  </form>
  <ul class="unregistered-emails">
    <h2>Unregistered students</h2>
    {{#each emails}}
    <li>
      <span>{{this.email}}</span>
        <button id="{{this.id}}" type="button" name="delete">Delete</button>
    </li>
    {{/each}}
  </ul>
</div>